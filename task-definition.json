{
    "family": "odm",
    "networkMode": "bridge",
    "containerDefinitions": [
        {
            "name": "opendronemap",
            "image": "opendronemap/opendronemap",
            "cpu": 8,
            "memory": 16384,
            "memoryReservation": 8192,
            "mountPoints": [
                {
                    "sourceVolume": "images",
                    "containerPath": "/code/images",
                    "readOnly": false
                },
                {
                    "sourceVolume": "odm_orthophoto",
                    "containerPath": "/code/odm_orthophoto",
                    "readOnly": false
                },
                {
                    "sourceVolume": "odm_texturing",
                    "containerPath": "/code/odm_texturing",
                    "readOnly": false
                }
            ],
            "privileged": true,
            "readonlyRootFilesystem": true
        }
    ],
    "volumes": [
        {
            "name": "images",
            "host": {
                "sourcePath": "/mnt/efs-mount-point/odm_data/images"
            }
        },
        {
            "name": "odm_texturing",
            "host": {
                "sourcePath": "/mnt/efs-mount-point/odm_data/odm_texturing"
            }
        },
        {
            "name": "odm_orthophoto",
            "host": {
                "sourcePath": "/mnt/efs-mount-point/odm_data/odm_orthophoto"
            }
        }
    ]
}
